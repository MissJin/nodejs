extends ../layout.jade

block content
	script(src="/js/admin.js")
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 电影名
						th 上映时间
						th 导演
						th 国家
						th 语种
						th 录入时间
						th 更新时间
						th 查看
						th 更新
						th 删除
				tbody
					each item in movies
						tr(class="item-id-#{item._id}")
							td #{item.title}
							td #{item.year}
							td #{item.doctor}
							td #{item.country}
							td #{item.language}
							td #{moment(item.meta.createAt).format('YYYY-MM-DD')}
							td #{moment(item.meta.updateAt).format('YYYY-MM-DD')}
							td 
								a(href="/movie/#{item._id}", target="_blank") 查看
							td 
								a(href="/admin/movie/update/#{item._id}", target="_blank") 更新
							td 
								button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
							
							
							
