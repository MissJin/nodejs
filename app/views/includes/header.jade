//- 导航条，置底部
.navbar.navbar-default.navbar-fixed-bottom
	.container
		.navbar-header
			a.navbar-brand(href="/") 投票网站
		if user
			p.navbar-text.navbar-right
				span 欢迎您,#{user.name}! 
				span &nbsp; | &nbsp;
				a.navbar-link(href="/user/logout", style="font-size:20px;font-weight:bold;color:blue;") 注销
		else
			p.navbar-text.navbar-right
				a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal", style="font-size:20px;font-weight:bold;color:blue;") 注册
				span &nbsp; | &nbsp;
				a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal", style="font-size:20px;font-weight:bold;color:blue;") 登入

//- 注册和登入的模态框 
#signupModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="post", action="/user/signup")
				.modal-header 
				.modal-body
					.form-group
						label(for="signupName") 昵称
						input#signupName.form-control(name="user[name]", type="text")
					.form-group
						label(for="signupMobile") 电话
						input#signupMobile.form-control(name="user[mobile]", type="text")

					.form-group
						label(for="signupPassword") 密码
						input#signupPassword.form-control(name="user[password]", type="password")
				.modal-footer
					button.btn.btn-success(type="submit") 确定
					button.btn.btn-default(type="button", data-dismiss="modal") 取消

#signinModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="post", action="/user/signin")
				.modal-header
				.modal-body
					.form-group
						label(for="signupMobile") 电话
						input#signupMobile.form-control(name="user[mobile]", type="text")
					.form-group
						label(for="signupPassword") 密码
						input#signupPassword.form-control(name="user[password]", type="password")
				.modal-footer
					button.btn.btn-success(type="submit") 确定
					button.btn.btn-default(type="button", data-dismiss="modal") 取消


